{
  "name": "greendeco-frontend",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "lint-staged": {
    "*": "prettier --write -u .",
    "./app/**/*.{js,ts,jsx,tsx,mdx}": [
      "eslint",
      "bash -c tsc --noEmit"
    ]
  },
  "scripts": {
    "dev": "next dev",
    "build": "npm install --ignore-scripts && next build",
    "start": "next start",
    "prettier": "prettier --write .",
    "lint": "next lint",
    "check:prettier": "prettier --check .",
    "check:lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "check:types": "tsc --noEmit",
    "check:all": "npm check:prettier && npm check:lint && npm check:types",
    "fix:prettier": "prettier --write .",
    "fix:lint": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "fix:all": "npm fix:prettier && npm fix:lint"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@heroicons/react": "^2.0.18",
    "@hookform/resolvers": "^3.3.1",
    "@mui/base": "^5.0.0-beta.14",
    "@paypal/react-paypal-js": "^8.1.3",
    "@tanstack/react-query": "^4.33.0",
    "@tanstack/react-table": "^8.10.7",
    "@types/node": "20.4.5",
    "@types/react": "18.2.17",
    "@types/react-dom": "18.2.7",
    "autoprefixer": "10.4.14",
    "axios": "^1.4.0",
    "clsx": "^2.0.0",
    "cookies-next": "^4.0.0",
    "eslint": "8.46.0",
    "eslint-config-next": "13.4.12",
    "framer-motion": "^10.16.0",
    "jsonwebtoken": "^9.0.2",
    "next": "13.4.12",
    "postcss": "8.4.27",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "^7.46.1",
    "react-loader-spinner": "^5.4.5",
    "react-loading-skeleton": "^3.3.1",
    "react-toastify": "^9.1.3",
    "swiper": "^11.0.5",
    "tailwindcss": "^3.4.0",
    "typescript": "5.1.6",
    "zod": "^3.22.2",
    "zustand": "^4.4.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-tailwindcss": "^3.13.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.1",
    "prettier-plugin-tailwindcss": "^0.5.2"
  }
}
